#!/usr/bin/env php
<?php

$dir = __DIR__.'/..';

if (!file_exists($dir.'/autoload.php')) {
    $dir = __DIR__.'/../vendor';
}

if (!file_exists($dir.'/autoload.php')) {
    $dir = __DIR__.'/../../..';
}

if (!file_exists($dir.'/autoload.php')) {
    echo 'Autoload not found.';
    exit(1);
}

include $dir.'/autoload.php';

exit((new \SimpleCli\SimpleCliCommand())(...array_slice($argv, 1)) ? 0 : 1);
